PCOMP3.ENABLE=PCOMP1.OUT
PCOMP3.INP=INENC1.VAL
PCOMP3.DELTAP=0
PCOMP3.START=0
PCOMP3.STEP=100
PCOMP3.WIDTH=10
PCOMP3.DIR=Positive
PCOMP3.PNUM=0
PCOMP3.RELATIVE=Relative
PCOMP3.USE_TABLE=No
PCOMP4.ENABLE=PCOMP2.OUT
PCOMP4.INP=INENC1.VAL
PCOMP4.DELTAP=0
PCOMP4.START=0
PCOMP4.STEP=100
PCOMP4.WIDTH=10
PCOMP4.DIR=Negative
PCOMP4.PNUM=0
PCOMP4.RELATIVE=Relative
PCOMP4.USE_TABLE=No
LUT1.INPA=PCOMP1.ACTIVE
LUT1.INPB=PCOMP2.ACTIVE
LUT1.FUNC=A|B
LUT2.INPA=PCOMP3.OUT
LUT2.FUNC=~A
PULSE1.INP=LUT2.OUT
